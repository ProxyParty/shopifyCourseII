{% comment %} collection type in the settings allows for storeowner to choose a collection within a certain block or something similar within the settings. {% endcomment %}
{% schema %}
{
  "name": "Collection Products 1",
  "class": "section",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "total_products",
      "min": 1,
      "max": 16,
      "step": 1,
      "label": "Total Products to Show",
      "default": 8
    },
    {
      "type": "select",
      "id": "container_shape",
      "options": [
        {
          "value": "rectangle",
          "label": "Rectangle"
        },
        {
          "value": "square",
          "label": "Square"
        },
        {
          "value": "circle",
          "label": "Circle"
        }
      ],
      "default": "rectangle",
      "label": "Container Shape"
    },
    {
      "type": "select",
      "id": "image_fit",
      "options": [
        {
          "value": "cover",
          "label": "Cover"
        },
        {
          "value": "contain",
          "label": "Contain"
        }
      ],
      "default": "cover",
      "label": "Product Image Fit"
    },
    {
      "type": "color",
      "id": "background",
      "label": "Background",
